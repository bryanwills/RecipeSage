{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/backend/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/backend",
        "format": ["cjs"],
        "bundle": true,
        "minify": false,
        "external": ["@sentry/profiling-node", "jsdom"],
        "main": "packages/backend/src/main.ts",
        "tsConfig": "packages/backend/tsconfig.json",
        "assets": ["packages/backend/src/assets"],
        "generatePackageJson": true,
        "esbuildConfig": "packages/backend/esbuild.config.js"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "backend:build",
        "debounce": 500
      },
      "configurations": {
        "development": {
          "buildTarget": "backend:build:development"
        },
        "production": {
          "buildTarget": "backend:build:production"
        }
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/backend",
        "command": "ts-node --swc src/bin/www"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/backend",
        "commands": [
          "tsc --project tsconfig.app.json --noEmit",
          "tsc --project tsconfig.spec.json --noEmit"
        ],
        "parallel": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "maxWarnings": 0
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/packages/backend"
      }
    }
  }
}
