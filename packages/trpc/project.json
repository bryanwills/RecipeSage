{
  "name": "trpc",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/trpc/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "dependsOn": ["util-shared:build", "util-server:build"],
      "options": {
        "main": "packages/trpc/src/index.ts",
        "outputPath": "dist/packages/trpc",
        "outputFileName": "main.js",
        "tsConfig": "packages/trpc/tsconfig.lib.json",
        "declaration": true,
        "assets": [
          {
            "glob": "packages/trpc/README.md",
            "input": ".",
            "output": "."
          }
        ],
        "platform": "node"
      },
      "configurations": {
        "development": {
          "minify": false
        },
        "production": {
          "minify": true
        }
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/trpc",
        "commands": [
          "tsc --project tsconfig.lib.json --noEmit",
          "tsc --project tsconfig.spec.json --noEmit"
        ],
        "parallel": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "maxWarnings": 0
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/packages/trpc"
      }
    }
  }
}
