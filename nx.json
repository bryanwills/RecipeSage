{
  "extends": "nx/presets/npm.json",
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "inputs": ["default", "^default", "sourcemap"],
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist", "{projectRoot}/www"],
      "cache": true
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/eslint.config.mjs"],
      "cache": true
    },
    "typecheck": {
      "inputs": ["default", "^default"],
      "cache": true
    },
    "@nx/eslint:lint": {
      "inputs": ["default", "{workspaceRoot}/eslint.config.mjs"],
      "cache": true
    },
    "@nx/vite:build": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["default", "^default"]
    },
    "@nx/vitest:test": {
      "cache": true,
      "inputs": ["default", "^default"]
    }
  },
  "namedInputs": {
    "sourcemap": [
      {
        "env": "SOURCEMAP_UPLOAD"
      }
    ]
  },
  "workspaceLayout": {
    "appsDir": "packages",
    "libsDir": "packages"
  },
  "tui": {
    "enabled": false
  },
  "neverConnectToCloud": true,
  "defaultBase": "master",
  "s3": {
    "region": "us-west-2",
    "bucket": "recipesage-nx-cache",
    "forcePathStyle": true,
    "localMode": "no-cache",
    "ciMode": "read-write"
  }
}
